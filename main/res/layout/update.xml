<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="16dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Price/unit"
        android:id="@+id/t2"
        android:textSize="25sp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/t1"
        android:layout_marginTop="32dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/e2"
        android:layout_alignBottom="@+id/t2"
        android:layout_alignParentEnd="true"
        android:layout_toEndOf="@+id/t2"
        android:inputType="numberDecimal" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Quantity In The Stock:"
        android:id="@+id/t3"
        android:textSize="25sp"
        android:layout_marginTop="32dp"
        android:layout_below="@+id/t2"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ee3"
        android:layout_below="@+id/t3"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:inputType="numberDecimal" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Description:"
        android:id="@+id/t4"
        android:layout_below="@+id/ee3"
        android:layout_alignParentStart="true"
        android:layout_marginTop="32dp"
        android:textSize="25sp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ee4"
        android:layout_alignTop="@+id/t4"
        android:minLines="2"
        android:layout_alignParentEnd="true"
        android:layout_toEndOf="@+id/t4"
        android:gravity="top" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="UPDATE"
        android:id="@+id/b1"
        android:layout_centerInParent="true"
        android:layout_below="@+id/ee4"
        android:layout_marginTop="43dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/e1"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignStart="@+id/e2" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Name"
        android:id="@+id/t1"
        android:layout_alignBottom="@+id/e1"

        android:layout_alignEnd="@+id/t2"
        android:textSize="25sp"
        android:layout_alignParentStart="true" />

</RelativeLayout>

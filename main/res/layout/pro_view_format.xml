<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout

    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="8dp"
    android:paddingLeft="8dp"
    android:paddingRight="8dp"
    android:paddingTop="8dp"
    xmlns:android="http://schemas.android.com/apk/res/android">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="999999"
        android:id="@+id/t1"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:textSize="16sp"
        android:minHeight="35dp"
        android:gravity="left|center_vertical"
        android:maxWidth="100dp"
        android:minWidth="70dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="abcdefghijklmnopqr"
        android:id="@+id/t2"
        android:layout_centerVertical="true"
        android:gravity="left|center_vertical"
        android:minHeight="35dp"
        android:textSize="16sp"
        android:layout_toEndOf="@+id/t1"
        android:layout_toStartOf="@+id/t3"
        android:maxWidth="100dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="99999999"
        android:id="@+id/t3"
        android:gravity="center_vertical|right"
        android:minHeight="35dp"
        android:layout_alignParentTop="true"
        android:layout_toStartOf="@+id/t4"
        android:minWidth="80dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=" /piece"
        android:id="@+id/t4"
        android:gravity="left|center_vertical"
        android:minHeight="35dp"
        android:textSize="16sp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:minWidth="50dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/b1"
        android:layout_alignBottom="@+id/t2"
        android:layout_alignStart="@+id/t1"
        android:layout_alignEnd="@+id/t4"
        android:background="#00ffffff"
        android:longClickable="true" />

</RelativeLayout>